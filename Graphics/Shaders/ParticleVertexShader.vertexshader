#version 330 core

layout (location = 0) in vec3 vertexPosition_modelspace;
layout (location = 1) in vec2 aTexCoord;

out vec2 TexCoord;
out vec4 ParticleColor;

uniform mat4 MVP;
uniform vec4 color;

void main(){

    gl_Position = MVP * vec4(vertexPosition_modelspace, 1.0);
    TexCoord = aTexCoord;
    ParticleColor = color;

}
